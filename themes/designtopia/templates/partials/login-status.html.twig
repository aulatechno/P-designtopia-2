<span class="login-status">
    {% if grav.user.authenticated %}
        <strong><a href="{{ base_url }}{{ config.plugins.login.route_profile }}">{{ grav.user.fullname ?: grav.user.username }}</a></strong>, <a class="logout" href="{{ uri.addNonce((base_url_relative ~ uri.path)|trim('/') ~ '/task' ~ config.system.param_sep ~ 'login.logout', 'logout-form', 'logout-nonce') }}">{{ 'PLUGIN_LOGIN.BTN_LOGOUT'|t }}</a>
    {% endif %}
</span>
