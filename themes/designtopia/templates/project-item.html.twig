{% extends 'partials/base.html.twig' %}

{% block content %}
  <div class="container projects-item">
    <div class="row">
      <div class="col text-center section-header">
        <div class="header-title">{{ page.header.title }}</div>
        <div class="header-subheading">{{ page.header.subheading }}</div>
      </div>

      <div class="section-content">
        {{ page.content }}
      </div>
    </div>

    <div class="post_navigation">
		{% include 'partials/sibling.html.twig' %}
    </div>
  </div>

  {% if config.plugins.admin.enabled and authorize(['admin.pages', 'admin.super']) %}
      {% if page.link == '/' %}
          {% set editPagePath = "/" ~ page.slug %}
      {% else %}
          {% set editPagePath = uri.path %}
      {% endif %}

      <a class="editpage" href="{{ base_url }}/admin/pages{{ editPagePath }}">Edit</a>
  {% endif %}
{% endblock %}
